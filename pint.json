{
  "preset": "laravel",
  "rules": {
    "binary_operator_spaces": {
      "default": "single_space"
    },
    "cast_spaces": true,
    "class_definition": {
      "single_line": true
    },
    "declare_strict_types": true,
    "method_chaining_indentation": true,
    "no_unused_imports": true,
    "ordered_imports": {
      "sort_algorithm": "alpha"
    }
  },
  "exclude": [
    "vendor",
    "node_modules",
    "storage",
    "bootstrap/cache"
  ]
}

